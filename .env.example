# Template de ambiente (nao versione .env real)
# Copie este arquivo para .env e preencha as credenciais localmente.

# Docker / Postgres
POSTGRES_DB=summaries
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
API_PORT=8080
TZ=UTC
REDIS_PASSWORD=change-me

# Application (local)
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/summaries
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_FALLBACK_MODEL=gpt-5.2-mini
LOG_LEVEL=INFO
HTTP_TIMEOUT_SECONDS=10
LLM_TIMEOUT_SECONDS=30
LLM_MAX_RETRIES=2
LLM_RETRY_BACKOFF_SECONDS=1.0
WIKIPEDIA_USER_AGENT=wiki-summarizer/1.0 (+https://example.local)
WIKIPEDIA_MIN_ARTICLE_WORDS=50
WIKIPEDIA_MAX_CONTENT_BYTES=2000000
WIKIPEDIA_MAX_REDIRECTS=5
SUMMARY_WORD_COUNT_MAX=500
ENABLE_PORTUGUESE_TRANSLATION=true

# Rate limit (Redis)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0
RATE_LIMIT_TRUST_PROXY_HEADERS=false
RATE_LIMIT_DEFAULT=120/minute
RATE_LIMIT_POST_SUMMARIES=30/minute
RATE_LIMIT_GET_SUMMARIES=300/minute
